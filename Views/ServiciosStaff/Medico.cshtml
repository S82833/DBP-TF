@model ProyectoDBP.Models.StaffMedico
@{
    ViewData["Title"] = "Detalle de Médico";

    
    string img = Model.Especialidad switch
    {
        "Ortodoncia" => Url.Content("~/fotos/Medico_Ortodoncia.jpg"),
        "Endodoncia" => Url.Content("~/fotos/Medico_Endodoncia.jpg"),
        "Periodoncia" => Url.Content("~/fotos/Medico_Periodoncia.jpg"),
        "Implantes" => Url.Content("~/fotos/Medico_Implantes.jpg"),
        "Estética dental" => Url.Content("~/fotos/Medico_Estetica_Dental.jpg"),
        "Radiografías" => Url.Content("~/fotos/Medico_Radiografias.jpg"),
        "Odontopediatría" => Url.Content("~/fotos/Medico_Odontopediatrias.jpg"),
        _ => Url.Content("~/fotos/Medico_Odontopediatrias.jpg")
    };
}

<link rel="stylesheet" href="~/css/StyleMedicos.css" asp-append-version="true" />

<section class="container section">
    <div class="medico-detalle-card">
        <div class="medico-detalle-header d-flex align-items-center gap-4">
            <img src="@img" alt="@($"{Model.Nombre} {Model.Apellido}")" class="medico-avatar" />
            <div>
                <h2 class="mb-1">Dr(a). @Model.Nombre @Model.Apellido</h2>
                <div class="text-teal fw-semibold">Especialidad: @Model.Especialidad</div>
            </div>
        </div>

        <div class="medico-detalle-body mt-3">
            @if (!string.IsNullOrWhiteSpace(Model.Biografia))
            {
                <p>@Model.Biografia</p>
            }
            else
            {
                <p>Profesional con amplia experiencia en @Model.Especialidad.</p>
            }

            <div class="mt-3 d-flex gap-3">
                <a class="btn btn-success"
                   asp-controller="Cliente" asp-action="agendarCita"
                   asp-route-especialidad="@Model.Especialidad"
                   asp-route-idMedico="@Model.IdStaffMedico">
                    Agendar cita
                </a>

                <a class="btn btn-secondary" asp-controller="ServiciosStaff" asp-action="StaffMedico">
                    Ver todo el staff
                </a>
            </div>
        </div>
    </div>
</section>

