@{
    ViewData["Title"] = "Inicio | Odontobrass";
    Layout = "_Layout";
}

<!-- Título y bajada -->
<section class="section">
    <div class="container">
        <h1 class="section-title section-title--left">Clínica Odontobrass</h1>
        <p class="lead lead--left">Cuidado odontológico con tecnología y calidez humana.</p>
    </div>
</section>

<!-- AGENDA TU CITA (reemplaza a los chips e imagen anterior) -->
<section class="hero-split section">
    <div class="container hero-split__grid">
        <div class="hero-split__copy">
            <h2 class="section-title">Agenda tu cita <span class="accent">en minutos</span></h2>
            <p class="lead">Elige especialidad, día y hora. Te confirmamos por correo.</p>
            <a class="btn" asp-controller="Cliente" asp-action="agendarCita">Agendar cita</a>
