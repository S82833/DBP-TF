@section Scripts {
    <script>
        (function(){
          const track = document.getElementById('medTrack');
          const prev = document.querySelector('.med-prev');
          const next = document.querySelector('.med-next');

          // cantidad a desplazar (ancho de card aprox). Ajusta si tus cards son más anchas
          const step = 320;

          prev?.addEventListener('click', () => { track.scrollBy({ left: -step, behavior: 'smooth' }); });
          next?.addEventListener('click', () => { track.scrollBy({ left:  step, behavior: 'smooth' }); });
        })();
    </script>
}