                <h5>Odontología general</h5><p>Restauraciones y limpiezas.</p>
            </a>
            <a class="svc-card" asp-controller="ServiciosStaff" asp-action="Servicios">
                <img class="svc-thumb" src="~/img/servicios/Ortodoncia.jpg" asp-append-version="true" alt="Ortodoncia">
                <h5>Ortodoncia</h5><p>Brackets y alineadores.</p>
            </a>
            <a class="svc-card" asp-controller="ServiciosStaff" asp-action="Servicios">
                <img class="svc-thumb" src="~/img/servicios/endodoncia.jpeg" asp-append-version="true" alt="Endodoncia">
                <h5>Endodoncia</h5><p>Tratamiento de conductos.</p>
            </a>
            <a class="svc-card" asp-controller="ServiciosStaff" asp-action="Servicios">
                <img class="svc-thumb" src="~/img/servicios/periodoncia.jpg" asp-append-version="true" alt="Periodoncia">
                <h5>Periodoncia</h5><p>Salud de encías.</p>
            </a>
            <a class="svc-card" asp-controller="ServiciosStaff" asp-action="Servicios">
                <img class="svc-thumb" src="~/img/servicios/implantes.jpeg" asp-append-version="true" alt="Implantes">
                <h5>Implantes</h5><p>Reemplazo de piezas dentales.</p>
            </a>
            <a class="svc-card" asp-controller="ServiciosStaff" asp-action="Servicios">
                <img class="svc-thumb" src="~/img/servicios/estetica-dental.jpg" asp-append-version="true" alt="Estética dental">
                <h5>Estética dental</h5><p>Blanqueamiento y carillas.</p>
            </a>
            <a class="svc-card" asp-controller="ServiciosStaff" asp-action="Servicios">
                <img class="svc-thumb" src="~/img/servicios/radiografias.jpeg" asp-append-version="true" alt="Radiografías">
                <h5>Radiografías</h5><p>Imágenes digitales.</p>
            </a>
            <a class="svc-card" asp-controller="ServiciosStaff" asp-action="Servicios">
                <img class="svc-thumb" src="~/img/servicios/odontopediatria.jpeg" asp-append-version="true" alt="Odontopediatría">
                <h5>Odontopediatría</h5><p>Atención para niños.</p>
            </a>
        </div>

        <div class="cta-row" style="margin-top:1rem">
            <a class="btn" asp-controller="ServiciosStaff" asp-action="Servicios">Ver todos los servicios</a>
        </div>
    </div>
</section>

<!-- STAFF PREVIEW -->
@{
    var medicos = ViewBag.Medicos as List<ProyectoDBP.Models.StaffMedico> ?? new();
    string ImgPorEspecialidad(string esp) => esp switch
    {
        "Ortodoncia" => Url.Content("~/fotos/Medico_Ortodoncia.jpg"),
        "Endodoncia" => Url.Content("~/fotos/Medico_Endodoncia.jpg"),
        "Periodoncia" => Url.Content("~/fotos/Medico_Periodoncia.jpg"),
        "Implantes" => Url.Content("~/fotos/Medico_Implantes.jpg"),
        "Estética dental" => Url.Content("~/fotos/Medico_Estetica_Dental.jpg"),
        "Radiografías" => Url.Content("~/fotos/Medico_Radiografias.jpg"),
        "Odontopediatría" => Url.Content("~/fotos/Medico_Odontopediatrias.jpg"),
        _ => Url.Content("~/fotos/Medico_Ortodoncia.jpg")
    };
}

<section class="container section">
    <h2 class="section-title">Conoce a nuestro <span class="accent">Staff Médico</span></h2>

    <div class="med-carousel">
        <button class="med-nav med-prev" type="button" aria-label="Anterior">‹</button>

        <div class="med-track" id="medTrack">
            @foreach (var m in medicos)
            {
                <article class="med-card">
                    <img src="@ImgPorEspecialidad(m.Especialidad)"
                         alt="@($"{m.Nombre} {m.Apellido}")"
                         class="med-img" />
                    <div class="med-info">
                        <h5 class="med-name">Dr(a). @m.Nombre @m.Apellido</h5>
                        <p class="med-esp">@m.Especialidad</p>
                        <div class="med-actions">
                            <a class="btn btn-outline-primary"
                               asp-controller="ServiciosStaff" asp-action="Medico"
                               asp-route-id="@m.IdStaffMedico">Ver más</a>
                            <a class="btn btn-success"
                               asp-controller="Cliente" asp-action="agendarCita"
                               asp-route-especialidad="@m.Especialidad"
                               asp-route-idMedico="@m.IdStaffMedico">Agendar cita</a>
                        </div>
                    </div>
                </article>
            }
        </div>

        <button class="med-nav med-next" type="button" aria-label="Siguiente">›</button>
    </div>
</section>




