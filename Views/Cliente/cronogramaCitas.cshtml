@{
    ViewData["Title"] = "Cronograma de citas";
    bool esMedico = ViewBag.EsMedico == true;
    var citas = (IEnumerable<dynamic>)Model;
}

<link rel="stylesheet" href="~/css/Odontobrass-Citas.css" asp-append-version="true" />

<div class="container section cronograma">
    <h2>@ViewData["Title"]</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-warning">@TempData["ErrorMessage"]</div>
    }

    <table class="table tabla-citas">
        <thead>
            <tr>
                <th>Fecha</th>
                <th>Servicio</th>
                <th>Paciente</th>
                <th>Doctor</th>
                <th class="text-center" style="width:220px">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in citas)
            {
                <tr>
                    <td>@(((DateTime)c.Fecha).ToString("dd/MM/yyyy HH:mm"))</td>
                    <td>@c.Servicio</td>
                    <td>@c.Paciente</td>
                    <td>@c.Doctor</td>
                    <td class="acciones text-center">
                        <a asp-controller="Cliente"
                           asp-action="ReprogramarCita"
                           asp-route-id="@c.IdCita"
                           class="btn btn-primary btn-sm me-2">
                            Reprogramar cita
                        </a>

                        <form asp-controller="Cliente"
                              asp-action="CancelarCita"
                              asp-route-id="@c.IdCita"
                              method="post"
                              class="d-inline m-0">
                            @Html.AntiForgeryToken()
                            <button type="submit"
                                    class="btn btn-danger btn-sm"
                                    onclick="return confirm('¿Cancelar esta cita?');">
                                Cancelar cita
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
